{{!-- Restaurant Card --}}
<div class="cards-niche">
  <section class="hbs-container"></section>
</div>

{{!-- Comment feed --}}
<div class="comments-feed">
  <section class="hbs-container-comments"></section>
</div>

<script src="https://code.jquery.com/jquery.js"></script>

<script id="card-hbs" type="text/x-handlebars-template">
  <div class="wrap">
    <div class="ui centered grey card">
      <div class="image index-card" style="min-width: 100%">
          <img src=\{{imageURL}}>
      </div>
      <div class="content">
          <h1 class="header">\{{name}}</h1>
      </div>
      <div class="extra content">
          <div class="rating">Rating: \{{this.rating}}/5</div>
      </div>
      <div class="wrapBtns">
        <div class="ui buttons restaurants"></div>
      </div>
    </div>
  </div>

  <div class="container">
    <div id="restaurant-content"  style="display: none;">
      <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
        <div class="carousel-inner">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleCaptions" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="1"></li>
          <li data-target="#carouselExampleCaptions" data-slide-to="2"></li>
        </ol>
          <div class="carousel-item active">
            <img id="pic1" class="d-block w-100">
            <div class="carousel-caption d-none d-md-block">
              <div id="wrap-content">
                <h4 id="person1"></h4>
                <hr>
                <p id="review1"></p>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img id="pic2" class="d-block w-100">
            <div class="carousel-caption d-none d-md-block">
              <div id="wrap-content">
                <h4 id="person2"></h4>
                <hr>
                <p id="review2"></p>
              </div>
            </div>
          </div>
          <div class="carousel-item">
            <img id="pic3" class="d-block w-100">
            <div class="carousel-caption d-none d-md-block">
              <div id="wrap-content">
                <h4 id="person3"></h4>
                <hr>
                <p id="review3"></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</script>

<script id="comments-hbs" type="text/x-handlebars-template">
  \{{#each this}}
    <div class="ui feed">
      <div class="event">
        <div class="content">
          <div class="summary">
            <p class="user">
              \{{user}}
            </p>
            <div class="date">
              on  
            </div>
          </div>
          <hr>
          <div class="meta">
            <p class="comment">
              \{{comment}}
            </p>
          </div>
        </div>
      </div>
    </div>
  \{{/each}}
</script>

<script src="https://code.jquery.com/jquery.js"></script>